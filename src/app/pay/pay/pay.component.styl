.back
  display: inline-block
  margin-right: 10px
  padding-right: 10px
  height: 28px
  border-right: 1px solid #ddd
  line-height: 28px
  color: #00c1e0
  cursor: pointer
.pay-table
  width: 100%
  border-collapse: collapse
  tbody, thead
    tr
      td, th
        padding: 8px
        line-height: 1.428
        text-align: left
        border-top: 1px solid #ddd
  tbody
    tr:nth-child(odd)
      td
        background: #f9f9f9
.info-container
  position: absolute
  bottom: 0;
  right: 0;
  left: 0;
  padding-top: 15px
  padding-bottom: 15px
  background: #f5f5f5
  .deal-info, .billing-info, .order-info
    float: right
    margin-right: 20px
    p
      margin-bottom: 10px
      line-height: 1.428
      .text-right
        display: inline-block
        padding-right: 8px
        width: 120px
        text-align: right
.modal-info-wrapper
  height: 70px
  .loading-info
    height: 28px
    line-height: 28px
    text-align: center
    &.success
      color: #67c234
    &.error
      color: #fa5555
  .loading-icon
    display: block
    margin: 5px auto
    width: 28px
    height: 28px
    font-size: 22px
    line-height: 28px
