.grid-drop-menu
  li
    line-height 40px
    cursor pointer
    width 140px
    padding-left 20px
    &:hover, a:hover
      background #00c1e0
      color #fff
    a
      display: block
      width: 140px
      margin-left: -20px
      padding-left: 20px
.label
  display: inline;
  padding: .2em .6em .3em;
  font-size: 75%;
  font-weight: bold;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: .25em;
.label-success
  background: #5cb85c;
.label-danger
  background: #d9534f;
.label-info
  background: #f0ad4e;
.label-sys
  background: #00c1e0;
.label-small
  padding: .1em .4em .2em;
.height-0
  height 0px
.link
  color #1ACCDE
.link:hover
  text-decoration underline

.grid-wrapper
  .tips
    margin-left: 10px;
    margin-top: 5px
    margin-bottom -3px;
    span
      color: #00c1e0;
      margin-right 5px;
