.grid-drop-menu
  li
    line-height 40px
    cursor pointer
    width 140px
    padding-left 20px
    &:hover
      background #00c1e0
      color #fff
      .li-btn
        color: #fff
    .li-btn
      display: block
      color: #333;
      margin-left: -20px;
      padding-left: 20px;
.label
  display: inline;
  padding: .2em .6em .3em;
  font-size: 75%;
  font-weight: bold;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: .25em;
.label-success
  background: #5cb85c;
.label-danger
  background: #d9534f;
.label-info
  background: #f0ad4e;
.height-0
  height 0px
.link-monitor
  color: #5cb85c
  font-size: 14px
  cursor: pointer
  font-weight: 700
.delete-btn
  color: #00c1e0
  cursor: pointer
