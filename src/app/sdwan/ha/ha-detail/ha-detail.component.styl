.right-detail
  li.item
    line-height 28px
    overflow hidden
    padding 20px ;
    border-bottom 1px solid #ccc
    h3
      font-weight normal
      font-size 14px
    .col-md-6
      width 50%
      display inline-block
      float left
    .name
        width 100px
        display inline-block
        color #777
        float left
    .model
      color #333
    .des
      position relative
      background #eee
      overflow hidden
      span.name
        width auto
      span.model
        margin-right 20px
        float left
      i
        color: #00c1e0;
        position: absolute;
        right: 40px;
        top: 50%;
        display: inline-block;
        margin-top: -7px;
        width: 14px;
        height: 14px;
        line-height: 14px;
        font-weight: bold;
        cursor: pointer;
    ul
      .list
        margin-top 10px
        &.border-active
          border-color #00c1e0
        span
          margin-right 20px
    .icon-cog
      cursor pointer
      color #00c1e0
      font-weight bold
li.clearfix
  ul li
    overflow hidden
.col-md-6-ul li
  display block
  width 354px
  height 28px
.more
  color #00c1e0
  transition all ease-in-out .3s
  cursor pointer
  &:hover
    color #009ebc
    text-decoration underline
.icon-refresh
  font-size 14px
  font-weight bold
  color #00c1e0
.icon-loading
  color #00c1e0
