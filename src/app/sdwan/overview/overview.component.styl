.wrapper
  padding: 10px 10px
  .box
    margin-bottom: 10px
    &>.header
      height 30px
      margin-bottom:5px
      background: #f7f7f7
      span
        display: inline-block
      .sign
        width: 5px
        height 30px
        background: #00c1e0
        margin-right: 8px
        padding-left:5px
      .text
        font-size: 14px
        height 30px
        line-height 30px
        vertical-align top


    .item
      float: left
      width: 32%
      margin-right: 1%
      .header
        height: 20px
        line-height: 20px
        font-size: 12px
        margin: 2px
        a
          float: right
          color: #00c1e0
          padding-right: 15px
      .chart-wrapper
        position: relative
        height: 200px
        .echart
          width: 100%
          height: 100%
        .no-data
          position: absolute
          top: 50%
          left: 50%
          margin-left: -75px
          width: 150px
          height: 30px
          text-align: center
          line-height: 30px
          background: #f3f3f3
      &.table
        .title
          text-align center
        .table-wrapper
          height: 200px
          li
            font-size: 0
            height 31px
            line-height: 31px
            &:nth-child(even)
              background #eee
            &.no-data
              font-size: 14px
              text-align center
              margin-top: 20px
            &.thead
              height 39px
              line-height: 39px
              span
                height 39px
                line-height 39px

            span
              display: inline-block
              font-size: 12px
              text-align center
              height 31px
              line-height 31px
              overflow hidden
              white-space: nowrap
              -ms-text-overflow: ellipsis
              text-overflow: ellipsis
              -webkit-box-sizing: border-box
              -moz-box-sizing: border-box
              box-sizing: border-box
              &:first-child
                width: 10%
              b.label
                display: inline-block
                width: 50px
                padding: 5px 0
                font-size: 75%
                font-weight: 700
                line-height: 1
                color: #fff
                text-align: center
                white-space: nowrap
                vertical-align: baseline
                border-radius: .25em
                &.label-success
                  background-color: #5cb85c
                &.label-danger
                  background-color: #d9534f
                &.label-warning
                  background-color: #f0ad4e


      &.cpeAlarm
        span
          &:nth-child(2)
            width: 30%
          &:nth-child(3)
            width: 40%
          &:nth-child(4)
            width: 20%
      &.publicNetworkAlarm,
      &.ceFault
        span
          &:nth-child(2)
            width: 40%
          &:nth-child(3)
            width: 40%
      &.usedBandwidthTop5
        span
          &:nth-child(2)
            width: 25%
          &:nth-child(3)
            width: 20%
          &:nth-child(4)
            width: 45%
      &.cell-5
        span
          &:nth-child(2)
            width: 25%
          &:nth-child(3)
            width: 20%
          &:nth-child(4)
            width: 15%
          &:nth-child(5)
            width: 30%
