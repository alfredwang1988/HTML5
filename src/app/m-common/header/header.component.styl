.header-container
  padding-left:  20px
  height: 60px
  background-color: #00c1e0
  .logo
    margin-top: 13px
  .header-dropdown
    float: right
    &:hover
      background: rgba(0,177,244,.8)
    .header-drop-down-toggle
      display: inline-block
      height: 60px
      line-height: 60px
      color: #fff
      font-size: 14px
    .header-drop-down-menu
      padding: 3px 0
      min-width 140px
      border-left: 1px solid rgba(0,0,0,.15)
      border-bottom: 1px solid rgba(0,0,0,.15)
      border-right: 1px solid rgba(0,0,0,.15)
      border-bottom-left-radius: 4px
      border-bottom-right-radius: 4px
      box-shadow: 0 6px 12px rgba(0,0,0,.175)
      li
        padding: 0 20px
        height: 30px
        line-height: 30px
        cursor: pointer
        &:hover
          color: #fff
          background: #00c1e0
          a
            color: #fff
        span,a
          display: block
i
  margin-right 5px
