.page-size
  display: block
  width: 100%
  height: 30px
  padding: 6px 12px
  font-size: 12px
  line-height: 1.428571429
  color: #555
  vertical-align: middle
  border: 1px solid #ccc
  border-radius: 4px
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.075)
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s
  background-color: #fff
  &:focus
    outline: 0
    border-color: #ccc



