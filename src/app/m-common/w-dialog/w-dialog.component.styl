.dialog-wrapper
  position: fixed
  top: 0
  right: 0
  z-index: 99
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, .5)
  overflow: auto
  .dialog
    position: relative
    z-index: 99
    top: 50%
    left: 50%
    margin-bottom: 15px
    border-radius: 2px
    background: #fff
    .dialog-header
      position: relative
      padding-left: 20px
      height: 44px
      border-bottom: 1px solid #ddd
      font-size: 14px
      line-height: 44px
      .close
        position: absolute
        top: 7px
        right: 0
        display: inline-block
        width: 30px
        height: 30px
        font-size: 16px
        line-height: 30px
        text-align: center
        cursor: pointer
        &:hover
          color: #00c1e0
