ul
  border-bottom 1px solid #ddd
  margin-bottom 20px
  padding 0 20px
  &:after
    display table
    clear both
    content ''
    visibility hidden
  li
    float: left
    margin-bottom: -1px
    cursor: pointer
    width: 80px
    height: 36px
    border: 1px solid transparent
    line-height: 36px
    text-align: center
    font-size 14px
    &.active
      border-color: #ddd
      border-bottom-color: transparent
      border-radius: 4px 4px 0 0
      color: #00c1e0
      background: #fff
