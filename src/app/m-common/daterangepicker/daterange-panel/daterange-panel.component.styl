.date-range-panel
  position: absolute
  top: 36px
  right: 0
  z-index: 99
  width: 600px
  border: 1px solid #e4e7ed
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1)
  background: #fff
  .range-panel-body
    display: inline-block
    overflow: hidden
    .calendar-header
      height: 30px
      font-size: 14px
      line-height: 30px
      text-align: center
      .prev-btn
        float: left
        width: 24px
        cursor: pointer
      .next-btn
        float: right
        width: 24px
        cursor: pointer
    .left-calendar, .right-calendar
      float: left
      padding: 15px
    .left-calendar
      border-right: 1px solid #ccc
    .calendar-body
      font-size: 12px
      user-select: none
      text-align: center
      th
        margin: 2px 0
        padding: 2px
        width: 36px
        color: #606266
        font-weight: 400
        line-height: 30px
        border-bottom: 1px solid #ebeef5
      td
        width: 36px
        height: 36px
        line-height: 36px
        cursor: pointer
        span
          display: inline-block
          margin: 3px auto
          width: 30px
          height: 30px
          line-height: 30px
        &:hover
          color: #409eff
        &.prev-month, &.next-month
          color: #b4bccc
        &.today
            span
              color: #fff
              background: #eee
              border-radius: 50%
        &.range-start
          border-radius: 50% 0 0 50%
          background: #f2f6fc
          span
            border-radius: 50%
            color: #fff
            background: #00c1e0
        &.range-end
          border-radius: 0 50% 50% 0
          background: #f2f6fc
          span
            border-radius: 50%
            color: #fff
            background: #00c1e0
        &.range-circle
          border-radius: 50%
          background: #f2f6fc
          span
            border-radius: 50%
            color: #fff
            background: #00c1e0
        &.range-in
          background: #f2f6fc
        &.disable
          color: #b4bccc
          cursor: not-allowed
    .calendar-footer
      padding-top: 15px
      select.time-select
        display: inline-block
        margin-right: 4px
        width: 66px
  .range-panel-footer
    padding: 4px 15px
    border-top: 1px solid #ccc
    text-align: right
    button
      padding: 0 12px
      height: 24px
      border: 1px solid transparent
      border-radius: 2px
      font-size: 12px
      color: #999
      font-weight: normal
      line-height: 24px
      text-align: center
      white-space: nowrap
      vertical-align: middle
      cursor: pointer
      &.confirm-btn
        color: #fff
        background: #00c1e0
    .error
      float: left
      margin-left: 10px
      color: #a94442
