.range-picker-wrapper
  .form-control
    display: inline-block
    margin-right: 5px
    width: 110px
    vertical-align: top
  .custom-wrapper
    display: inline-block
    position: relative
    .input-wrapper
      position: relative
      height: 30px
      font-size: 12px
      line-height: 30px
      border: 1px solid #ccc
      border-radius: 2px
      cursor: pointer
      .label-control
        display: inline-block
        width: 140px
        text-align: center
      .clear-btn
        visibility: hidden
        margin-top: 5px
        width: 20px
        height: 20px
        font-size: 16px
        text-align: center
        line-height: 20px
        cursor: pointer
      &:hover
        .clear-btn
          visibility: inherit
