.app-grid
  .hidden-columns
    display: none
  .grid-empty-block
    .empty-text
      display: block
      margin: 10px auto
      width: 400px
      height: 40px
      line-height: 40px
      text-align: center
      background: #f5f5f5
  .app-grid-start
    width: 100%
    border-top: 1px solid #d4d4d4
    border-bottom: 1px solid #d4d4d4
    border-collapse: collapse
    color: #333
    line-height: 24px
    background: #fff
    &.hasBorder
      border 1px solid #d4d4d4
    td
      border-width: 1px 0 0 0px
      border-color: #d4d4d4
      border-style: solid
      word-wrap: break-word
      word-break: break-all
      cursor: pointer
    tr
      td:first-child
        border-left-width: 0
    .app-grid-header
      td
        padding: 6px 4px
        text-overflow: ellipsis
        word-wrap: normal
        white-space: nowrap
        font-weight: bold
        cursor auto
    .app-grid-body
      tr
        &:nth-child(even)
          background: #f6f6f6
        &.selected
          background: #c9dde1
      td
        padding: 6px 4px
  .grid-loading
    text-align: center
    color: #00c1e0
    span
      display: block
      margin: 10px auto
      width: 40px
      font-size: 30px
