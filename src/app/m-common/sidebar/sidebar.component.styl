:host
  display: block
  height: 100%
.w-sidebar
  position: relative
  z-index: 2
  height: 100%
  color: #fff
  background: #333
  .toggle-bar
    height: 40px
    border-bottom: 1px solid rgba(102,102,102,.3)
    line-height: 40px
    text-align: center
    cursor: pointer
  .side-menu
    a
      display: block
      height: 36px
      line-height: 36px
      color: #fff
      text-decoration: none
      overflow: hidden
      &.active
        background: #00c1e0
      &:hover
        width: 110px
        background: #666
      i
        float: left
        display: inline-block
        width: 36px
        height: 36px
        text-align: center
