.create-wrapper
  display inline-block
.form-container
  padding 20px 40px
  .form-name
    width: 100px;
    display inline-block
    float left
  .form-model
    display inline-block
    line-height 30px;
    input
      width: 40px;
      float: left;
      margin-right: 12px;
      padding: 0;
      text-align: center;
    span.split
      float left
      margin-right 12px
      line-height 30px;
    i.iconfont
      font-weight bold
      color #00c1e0
      cursor pointer
      &:hover
        transition all ease-in-out .3s
        color #0098b7
  .form-error
    padding-left 100px
  .account-ref-wrapper
    width: 300px
.btn-footer
  text-align center
  padding 10px 20px
  background #e1eef0
  button:first-child
    margin-right 30px
div.ng-dirty.ng-invalid
  border none
