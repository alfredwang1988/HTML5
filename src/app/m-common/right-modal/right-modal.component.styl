.right-modal-wrapper
  position: absolute
  top: 0
  right: 0
  bottom: 0
  z-index: 4
  width: 300px
  border-left: 1px solid #ccc
  box-shadow: -1px 0 10px rgba(0,0,0,.5)
  background: #fff
  overflow-y auto
  .modal-title
    position: relative
    padding: 0 20px
    height: 50px
    font-size: 14px
    line-height: 50px
    border-bottom: 1px solid #ccc
    .close
      position: absolute
      top: 8px
      right: 8px
      display: inline-block
      width: 30px
      height: 30px
      font-size: 16px
      font-weight bold
      line-height: 30px
      text-align: center
      cursor: pointer
      &:hover
        color: #00c1e0
.shade
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 2
  width: 100%
  height: 100%
  opacity: 0
  background: #000
