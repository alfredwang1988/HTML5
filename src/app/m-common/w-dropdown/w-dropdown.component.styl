.w-dropdown
  position: relative
  .w-dropdown-toggle
    position: relative
    display: inline-block
    padding-left: 8px
    padding-right: 16px
    cursor: pointer
    white-space nowrap
    .iconfont
      position: absolute
      margin-top: -7px
      top: 50%
      right: 3px
      display: inline-block
      width: 12px
      height: 16px
      line-height: 16px
  .w-dropdown-menu
    position: absolute
    top: 100%
    right: 0
    z-index: 9
    min-width: 120px
    border: 1px solid rgba(0,0,0,.15)
    border-radius: 2px
    box-shadow: 0 6px 12px rgba(0,0,0,.175)
    background: #fff
