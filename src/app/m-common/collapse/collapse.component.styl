.w-collapse
  &.border-line
      border 1px solid #ccc
    &.border-active
      border-color #00c1e0
      box-shadow: 0 0 3px rgba(0, 193, 224, 0.6);
  .collapse-header
    position: relative
    padding-left: 15px
    padding-right: 18px
    height: 36px
    font-size: 12px
    line-height: 36px
    background-color: #fefefe
    cursor pointer
    &.isSub
      background #e5e5e5
      border-top: 1px solid #ccc
    i.arrow
      position: absolute
      right: 3px
      top: 50%
      z-index: 2
      display: inline-block
      margin-top: -7px
      width: 14px
      height: 14px
      line-height: 14px
      font-size: 12px
      text-align: center
      cursor pointer
    .inputItem
      span.name
        color #777
      span.model
        margin-right 20px
        color #333
      i.icon-cog
        color #00c1e0
        position absolute
        right: 40px
        top: 50%
        display: inline-block
        margin-top: -7px
        width: 14px
        height: 14px
        line-height 14px
        font-weight bold
        cursor pointer
      i.icon-chart
        color #00c1e0
        font-weight bold
        cursor pointer
  .content-padding
    padding 0 15px
